{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Construction Entry",
  "description": "A grammatical construction in Construction Grammar (CxG)",
  "type": "object",
  "required": ["id", "pattern", "name", "meanings"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the construction",
      "pattern": "^[a-z-]+[0-9]{3}$"
    },
    "pattern": {
      "type": "string",
      "description": "Formal syntactic/morphological pattern"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the construction"
    },
    "meanings": {
      "type": "array",
      "description": "Array of meanings (senses) for the construction",
      "items": {
        "type": "object",
        "required": ["meaning", "examples"],
        "properties": {
          "meaning": {
            "type": "string",
            "description": "Description of a specific meaning/sense"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["form"],
              "properties": {
                "form": {
                  "type": "string"
                },
                "notes": {
                  "type": "string"
                },
                "sourceText": {
                  "type": "string"
                }
              }
            }
          },
          "notes": {
            "type": "string",
            "description": "Additional notes about this meaning/sense"
          },
          "relatedConstructions": {
            "type": "array",
            "description": "Constructions related to this specific meaning",
            "items": {
              "type": "object",
              "required": ["id", "relationship"],
              "properties": {
                "id": {
                  "type": "string"
                },
                "relationship": {
                  "type": "string",
                  "enum": [
                    "alternates-with",
                    "contains",
                    "inherits-from",
                    "similar-to",
                    "related-to",
                    "transformed-from",
                    "specialization-of",
                    "see-also"
                  ]
                },
                "notes": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["syntactic", "morphological", "semantic", "pragmatic", "structural", "head", "position"]
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "semanticType": {
      "type": "string",
      "enum": ["reference", "predication", "modification", "quantification"]
    },
    "relatedConstructions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "relationship"],
        "properties": {
          "id": {
            "type": "string"
          },
          "relationship": {
            "type": "string",
            "enum": [
              "alternates-with",
              "contains",
              "inherits-from",
              "similar-to",
              "related-to",
              "transformed-from",
              "specialization-of",
              "see-also"
            ]
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}